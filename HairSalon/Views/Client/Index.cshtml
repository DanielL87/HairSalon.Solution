<h2>List of Client Names for this Stylist:</h2>

<ul>

@if(@Model.Count == 0)
{

<h3>Add A New Client for this Stylist</h3>

 <form action="/stylists/show/" method="post">
            <div class="col col-md-3">
                <label for="clientName">Client Name:</label>
                <input class="form-control" id="clientName" name="clientName" type="text" required><br>
            </div>  

    <br>
    <button class="btn btn-primary btn-lg" type="submit">Add</button>       
</form>

}

else

{
@foreach(var client in Model)
{
  <li><a href="/client/show/@client.GetId()">@client.GetName()</a></li>
}
}
</ul>

<h3>Add A New Client for this Stylist</h3>

 <form action="/stylists/@Model["stylist"][0].GetId()/clients/new/" method="post">
            <div class="col col-md-3">
                <label for="clientName">Client Name:</label>
                <input class="form-control" id="clientName" name="clientName" type="text" required><br>
            </div>  

    <br>
    <button class="btn btn-primary btn-lg" type="submit">Add</button>       
</form>

<h3>Click <a href="/stylists/new"> here </a> to add a new stylist. </h3>
